<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap');
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins',sans-serif;
        }
        body{
            display: flex;
            height: 100vh;
            justify-content: center;
            align-items: center;
            padding: 10px;
            background: linear-gradient(135deg,#71b7e6,#9b59b6);
        }
        .container{
            max-width: 700px;
            width: 100%;
            background: #fff;
            padding: 25px 30px;
            border-radius: 5px;
        }
        .container .title{
            font-size: 25px;
            font-weight: 500;
            position: relative;
        }
        .container .title::before{
            content: " ";
            position: absolute;
            height: 4.5px;
            width: 32px;
            background: linear-gradient(135deg,#71b7e6,#9b59b6);
            border-radius: 5px;
            left: 0;
            bottom: 0;
        }
        .container form .userdetail{
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin: 20px 0 12px 0;
        }
        form .userdetail .inputbox{
            width: calc(100% / 2 - 20px);
            margin-bottom: 15px;
        }
        .userdetail .inputbox .detail{
            font-weight: 500;
            display: block;
            margin-bottom: 5px;
        }
        .userdetail .inputbox input{
            height: 45px;
            outline: none;
            border-radius: 5px;
            border: 1px solid #ccc;
            padding-left: 15px;
            font-size: 16px;
            width: 100%;
            border-bottom-width: 2px;
            transition: all 0.5s ease;
        }
        .userdetail .inputbox input:focus,
        .userdetail .inputbox input:valid{
            border-color: #9b59b6;   
        }
        form .dept-detail .depttitle{
            font-size: 20px;
            font-weight: 500;
        }

        form .dept-detail .category{
            width: 80%;
            display: flex;
            justify-content: space-between;
            margin: 14px 0 ;
        }

        .dept-detail .category label{
            display: flex;
            align-items: center;
        }
        .dept-detail .category .dot{
            height: 18px;
            width: 18px;
            background: #d9d9d9;
            border: 5px solid transparent;
            border-radius: 50%;
            margin-right: 10px;
        }
        #dot-1:checked ~ .category label .one,
        #dot-2:checked ~ .category label .two,
        #dot-3:checked ~ .category label .three,
        #dot-4:checked ~ .category label .four,
        #dot-5:checked ~ .category label .five,
        #dot-6:checked ~ .category label .six{
            border-color: #d9d9d9;
            background: #9b59b6;
        }
        form input[type="radio"]{
            display: none;
        }
        form .button{
            height: 45px;
            margin: 45px 0;
        }
        form .button input{
            height: 100%;
            width: 100%;
            outline:none;
            color: #fff;
            background: #009579;
            border: none;
            font-size: 18px;
            font-weight: 500;
            letter-spacing: 1px;
            border-radius: 5px;
        }
        form .button input:hover{
            background: #006653;
            transition: 0.5s;
        }
        @media (max-width:584px){
            .container{
                max-width: 100%;
            }
            form .userdetail .inputbox{
                margin-bottom:15px ;
                width: 100%;
            }
            .container form .userdetail{
                max-width: 300px;
                overflow-y: scroll;
            }
            .userdetail::-webkit-scrollbar{
                width: 0;
            }
            form .dept-detail .category{
                max-width: 300px;
                overflow-y: scroll;
            }
            .dept-detail .category .dot{
                max-width:300px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <% if (Passerror && Passerror.length != 0) {%>
        <div class="alert alert-danger" role="alert"><%= Passerror %></div>
        <% } %>
        <!-- <% if (DetailError && DetailError.length != 0) {%>
            <div class="alert alert-danger" role="alert"><%= DetailError %></div>
            <% } %> -->
        <div class="title">Registration</div>
        <form action="/register" method="post">
            <div class="userdetail">
                <div class="inputbox">
                    <span class="detail">Full Name</span>
                    <input type="text" name="Name" placeholder="Enter Your Name" required>
                </div>
                <div class="inputbox">
                    <span class="detail">Enrollment Number</span>
                    <input type="text" id="prn" name="PRN" placeholder="Enter Your PRN Number" onkeyup="check()" required>
                </div>
                <div class="inputbox">
                    <span class="detail">Email</span>
                    <input type="email" id="email" name="Email" placeholder="Enter Your Email" onkeyup="validate()" required>
                </div>
                <div class="inputbox">
                    <span class="detail">Phone Number</span>
                    <input type="text" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" name="Mobile" placeholder="Enter Your Number" required>
                </div>
                <div class="inputbox">
                    <span class="detail">Password</span>
                    <input type="password" id="pass" name="Password" onkeyup="passvalid()" placeholder="Enter Your Password" required>
                </div>
                <div class="inputbox">
                    <span class="detail">Confirm Password</span>
                    <input type="password" name="ConPass" placeholder="Confirm Your Password" required>
                </div>
            </div>
            <div class="dept-detail">
                <input type="radio" name="dept" id="dot-1">
                <input type="radio" name="dept" id="dot-2">
                <input type="radio" name="dept" id="dot-3">
                <input type="radio" name="dept" id="dot-4">
                <input type="radio" name="dept" id="dot-5">
                <input type="radio" name="dept" id="dot-6">
                <span class="depttitle">Department</span>
                <div class="category">
                    <label for="dot-1">
                        <span class="dot one"></span>
                        <span class="dept">IT</span>
                    </label>
                    <label for="dot-2">
                        <span class="dot two"></span>
                        <span class="dept">CE</span>
                    </label>
                    <label for="dot-3">
                        <span class="dot three"></span>
                        <span class="dept">ME</span>

                    </label>
                    <label for="dot-4">
                        <span class="dot four"></span>
                        <span class="dept">CIVIL</span>
                    </label>
                    <label for="dot-5">
                        <span class="dot five"></span>
                        <span class="dept">ICT</span>
                    </label>
                    <label for="dot-6">
                        <span class="dot six"></span>
                        <span class="dept">AIDS</span>
                    </label>
                </div>
            </div>
            <div class="button">
                <input type="submit" value="Register">
            </div>
        </form>
    </div>
    <script>
            var prn = document.getElementById("prn");
            var email = document.getElementById("email");
            var pass = document.getElementById("pass");

            function check(){
                if(!prn.value.match(/[0-9]{16}/))
                {
                    prn.style.borderColor = "red";
                 }
                else{
                    prn.style.borderColor="green";
                }
            }
            function validate(){
                if(!email.value.match(/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/))
                {
                    email.style.borderColor = "red";
                }
                else{
                    email.style.borderColor = "green";
                }
            }
            function passvalid(){
                if(!pass.value.match(/((?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[^A-Za-z0-9])(?=.{8,}))/))
                {
                    pass.style.borderColor = "red";
                }
                else{
                    pass.style.borderColor = "green";
                }
            }
    </script>
</body>
</html>